<%- include('../../partials/header.ejs') %>
<section id="pg_users">
  <div class="container">
    <div class="box">
      <div class="boxHeader">
        <h2>Criando Usuario</h2>
      </div>
      <div class="boxBody">
        <form action="/admin/users/save" method="POST">
          <div class="form_row">
            <input
              type="text"
              name="email"
              value="<%= user.email %>"
              placeholder="Email"
              required
            />
          </div>

          <div class="form_row">
            <input type="password" name="password" placeholder="Senha" required />
          </div>

          <input type="hidden" name="id" value="<%= user.id %>" />

          <button>Salvar</button>
        </form>
      </div>
    </div>
  </div>
</section>
<%- include('../../partials/footer.ejs') %>
