<%- include('../../partials/header.ejs') %>
<section id="pg_users">
  <div class="container">
    <div class="box">
      <div class="boxHeader">
        <h2>Cadastrar Usuario</h2>
      </div>
      <div class="boxBody">
        <form action="/admin/users/save" method="POST" autocomplete="off">
          <div class="form_row">
            <input
              type="text"
              name="email"
              value="<%= email %>"
              placeholder="Email"
              required
              autocomplete="off"
            />
            <span style="margin-top: 10px; font-size: 12px; color: red"><%= msg; %></span>
          </div>

          <div class="form_row">
            <input type="password" name="password" placeholder="Senha" required />
          </div>

          <button>Salvar</button>
        </form>
      </div>
    </div>
  </div>
</section>
<%- include('../../partials/footer.ejs') %>
