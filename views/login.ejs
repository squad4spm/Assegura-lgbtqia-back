<%- include('partials/header.ejs') %>
<section id="pg_login">
  <div class="container">
    <div class="box">
      <div class="boxHeader">
        <h2>Login</h2>
      </div>
      <div class="boxBody">
        <form action="/login" method="POST" autocomplete="off">
          <div class="form_row">
            <input type="text" name="email" placeholder="Email" required autocomplete="off" />
          </div>

          <div class="form_row">
            <input type="password" name="password" placeholder="Senha" required />
          </div>

          <div class="form_row">
            <span style="margin-top: 10px; font-size: 12px; color: red"><%= msg; %></span>
          </div>

          <button>Logar</button>
        </form>
      </div>
    </div>
  </div>
</section>
<%- include('partials/footer.ejs') %>
